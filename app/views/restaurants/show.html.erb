<h1><%= @restaurant.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Category</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @restaurant.name %></td>
        <td><%= @restaurant.address %></td>
        <td><%= @restaurant.category %></td>
        <td><%= @restaurant.phone_number %></td>
      </tr>
  </tbody>
</table>

<br>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
<%= link_to 'Back to homepage', restaurants_path %>

<br>

<table>
  <thead>
    <tr>
      <th>Ratings</th>
      <th>Reviews</th>
      <th colspan="3"></th>
    </tr>
  </thead>

 <tbody>
    <% @restaurant.reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= review.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>
